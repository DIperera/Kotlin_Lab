<?xml version="1.0" encoding="utf-8"?>
<!--You can use either RelativeLayout or ConstraintLayout. But, If you're placing just one or two views(UI elements like TextView, Button, ImageView, Spinner), RelativeLayout is quicker and easier than ConstraintLayout-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Spinner (Dropdown) in the center of the screen -->
    <Spinner
        android:id="@+id/mySpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />
</RelativeLayout>
